<launch>
  <!-- Declare arguments -->
  <arg name="use_sim_time" default="false" description="Use simulation (Gazebo) clock if true"/>
  <arg name="urdf_file" default="$(find optimo_description)/urdf/optimo.urdf.xacro" description="URDF/XACRO description file"/>
  
  <!-- Convert Xacro to URDF -->
  <node pkg="xacro" exec="xacro" output="screen" args="--inorder $(var urdf_file) -o /tmp/your_robot.urdf"/>
  
  <!-- Start robot_state_publisher -->
  <node pkg="robot_state_publisher" exec="robot_state_publisher" name="robot_state_publisher" output="screen">
    <param name="use_sim_time" value="$(var use_sim_time)"/>
    <param name="robot_description" command="$(find your_robot_package_name)/urdf/your_robot.urdf"/>
  </node>

  <!-- Start RViz -->
  <node pkg="rviz2" exec="rviz2" name="rviz2" output="log">
    <param name="use_sim_time" value="$(var use_sim_time)"/>
  </node>
</launch>
