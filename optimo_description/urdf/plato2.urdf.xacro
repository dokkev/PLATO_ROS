    <!-- Joint: Base Link to Plato Base -->
    <joint name="base_link_joint" type="fixed">
        <parent link="base_link"/>
        <child link="plato_base"/>
    </joint> 


    <!-- Joint: Plato Base to Thumb-->
    <joint name="thumb_joint" type="fixed">
        <origin xyz="-0.0225 0.0580 -0.0160" rpy="0 0 0" />
        <parent link="plato_base" />
        <child link="thumb_roll" />
    </joint>
    
    <!-- Joint: T -->
    <joint name="f0_mcp_roll" type="revolute">
<origin xyz="-0.0074999999999999997224 0.0069999999999999992784 -0.016999999999999994282" rpy="-1.570796326794896558 1.7904316928197674078e-15 -3.1415926535897873428" />
